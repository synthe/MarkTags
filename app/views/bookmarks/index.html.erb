<h1>Bookmarks</h1>
<div class="centered">
  <span class="page_button"><%= link_to 'New Bookmark', new_bookmark_path %></span>
</div>
<table id="bookmarks_table">
  <tr>
    <th>&nbsp;</th>
    <th>Title</th>
    <th>Description</th>
    <th>Url</th>
    <th>Author</th>
    <th>Tags</th>
    <th colspan="3">&nbsp;</th>
  </tr>

<% @bookmarks.each do |bookmark| %>
  <tr>
    <td><a href="<%=h bookmark.url %>">LINK</a></td>
    <td><%=h bookmark.title %></td>
    <td><%=h bookmark.description %></td>
    <td><%=h bookmark.url %></td>
    <td><%=h bookmark.author %></td>
    <td><%=h bookmark.tags_string %></td>
    <td><%= link_to 'Show', bookmark %></td>
    <td><%= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
    <td><%= link_to 'Destroy', bookmark, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

