<h1>Bookmarks</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Url</th>
    <th>Author</th>
    <th>Tags</th>
  </tr>

<% @bookmarks.each do |bookmark| %>
  <tr>
    <td><%=h bookmark.title %></td>
    <td><%=h bookmark.description %></td>
    <td><%=h bookmark.url %></td>
    <td><%=h bookmark.author %></td>
    <td><%=h bookmark.tags_string %></td>
    <td><%= link_to 'Show', bookmark %></td>
    <td><%= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
    <td><%= link_to 'Destroy', bookmark, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Bookmark', new_bookmark_path %>